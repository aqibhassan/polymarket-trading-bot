apiVersion: v1
kind: Secret
metadata:
  name: mvhe-secrets
  namespace: mvhe
  labels:
    app: mvhe
    component: trading-bot
    version: "0.1.0"
type: Opaque
data:
  # ---------------------------------------------------------------
  # PLACEHOLDER base64 values below. Replace before deploying.
  # NEVER commit real credentials to version control.
  #
  # To encode a value:  echo -n 'YOUR_VALUE' | base64
  # To decode a value:  echo 'BASE64_VALUE' | base64 -d
  # ---------------------------------------------------------------

  # Polymarket wallet private key (hex, no 0x prefix)
  # echo -n 'REPLACE_ME' | base64 = UkVQTEFDRV9NRQ==
  POLYMARKET_PRIVATE_KEY: "UkVQTEFDRV9NRQ=="

  # Polymarket funder/proxy wallet address
  POLYMARKET_FUNDER_ADDRESS: "UkVQTEFDRV9NRQ=="

  # PostgreSQL / TimescaleDB password
  POSTGRES_PASSWORD: "UkVQTEFDRV9NRQ=="

  # Grafana admin password
  GF_ADMIN_PASSWORD: "UkVQTEFDRV9NRQ=="

  # Database connection URLs (contain credentials)
  # echo -n 'postgresql://mvhe:REPLACE_ME@timescaledb:5432/mvhe' | base64
  TIMESCALEDB_URL: "cG9zdGdyZXNxbDovL212aGU6UkVQTEFDRV9NRUB0aW1lc2NhbGVkYjo1NDMyL212aGU="

  # Redis URL (no auth by default, but reserved for future use)
  REDIS_URL: "cmVkaXM6Ly9yZWRpczo2Mzc5LzA="

  # ClickHouse URL
  CLICKHOUSE_URL: "aHR0cDovL2NsaWNraG91c2U6ODEyMw=="
